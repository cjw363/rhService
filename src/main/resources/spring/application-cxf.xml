    <jaxws:endpoint implementor="cn.com.gzkit.olm.webservice.impl.OlmWebServiceImpl" address="/olm"></jaxws:endpoint>
	<jaxws:endpoint implementor="cn.com.gzkit.mip.webservice.impl.MipWebServiceImpl" address="/mip"></jaxws:endpoint>
	-->
</beans>