<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.gzkit.dao.RentHouseDao">
    <select id="selectUser" parameterType="cn.com.gzkit.entity.LoginUser" resultType="cn.com.gzkit.entity.LoginUser">
        select * from tbl_user where name=#{name}
        <if test="password!=null and password!='' ">
            and password=#{password}
        </if>
    </select>
    <select id="selectUserByName" parameterType="pd" resultType="cn.com.gzkit.entity.LoginUser">
        select * from tbl_user where name=#{name}
    </select>
    <insert id="insertUser" parameterType="pd">
        insert into tbl_user (name,password,time,schoolId) values (#{name},#{password},now(),#{schoolId})
    </insert>
    <select id="selectSchoolName" parameterType="pd" resultType="String">
        select name from tbl_school
    </select>
    <select id="selectSchoolByName" parameterType="pd" resultType="pd">
        select * from tbl_school where name=#{school}
    </select>

    <select id="selectCampusList" parameterType="page" resultType="pd">
        select * from tbl_rent where type=#{pd.type} order by time desc
    </select>
    <insert id="insertRent" parameterType="pd">
        insert into tbl_rent (title,content,title_img,other_img,type,longitude,latitude,location,amount,house_type,area,label,bbs_id,user_id,time)
         VALUES (#{title},#{content},#{title_img},#{other_img},#{type},#{longitude},#{latitude},#{location},#{amount},#{house_type},#{area},#{label},#{bbs_id},#{user_id},now())
    </insert>
</mapper>